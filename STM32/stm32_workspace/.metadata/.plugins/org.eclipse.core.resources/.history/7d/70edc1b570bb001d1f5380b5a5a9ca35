
#if !defined(PACKET_DEF_H)

#define PACKET_DEF_H

#include <stdbool.h>
#include <stdint.h>

typedef uint16_t check_sum_t;

typedef struct
{
    uint8_t             cmd_code;
    uint8_t             rsvd1;
    uint8_t             rsvd2;
    uint8_t             rsvd3;
    union
    {
        uint16_t        src_dst;
        struct
        {
            uint8_t     src;
            uint8_t     dst;
        };
    };
    uint8_t             rsp_code;
    uint8_t             err_code;
} pkt_header_t;


#define PKT_SIZE_BYTES    256
#define PKT_DATA_SIZE_BYTES     (PKT_SIZE_BYTES - sizeof(pkt_header_t) - sizeof(check_sum_t))


typedef union
{
    struct
    {
        uint8_t tbd[PKT_DATA_SIZE_BYTES];
    };
    uint8_t flat_data_uint8_t[PKT_DATA_SIZE_BYTES];
    uint16_t flat_data_uint16_t[PKT_DATA_SIZE_BYTES / sizeof(uint16_t)];
    uint32_t flat_data_uint32_t[PKT_DATA_SIZE_BYTES / sizeof(uint32_t)];
} pkt_data_t;



typedef enum
{
	RSP_RSP_ACK = 0x30,
	RSP_RSP_NACK = 0x31,
} rsp_rsp_e;


typedef struct
{
    pkt_header_t    header;
    pkt_data_t      data;
    check_sum_t     check_sum;
} pkt_t;
typedef pkt_t *p_packet_handle_t;


typedef enum
{
	PKT_SRC_DST_SNS_TX,
	PKT_SRC_DST_SNS_RX,
} pkt_src_dst_t;


#endif
