#include "main.h"
#include <stdbool.h>
#include <stdint.h>
#include <stdlib.h>
#include "esp_12f.h"
#include <string.h>
#include "spi_access_hal.h"

char *g_esp12f_str;

char* esp12f_construct_command(esp12f_commands_e cmd, uint16_t size)
{
    bool param = false;
    switch (cmd)
    {
        case ESP12F_STARTUP:
        break;
        case ESP12F_RESTART:
        break;
        case ESP12F_VERSION_INFO:
            param = true;
            g_esp12f_str = "+GMR";
        break;
        case ESP12F_ENTER_DEEP_SLEEP:
            param = true;
            g_esp12f_str = "+GSL";
        break;
        case ESP12F_ECHO_ENABLE:
            g_esp12f_str = "+ATE1";
        break;
        case ESP12F_ECHO_DISABLE:
            g_esp12f_str = "+ATE0";
        break;
        case ESP12F_RESET:
        break;
        case ESP12F_UART_CONFIG:
            g_esp12f_str = "+UART";
        break;
        case ESP12F_UART_CURRENT_CONFIG:
            g_esp12f_str = "+UART_CUR";
        break;
        case ESP12F_UART_DEFAULT_CONFIG:
            g_esp12f_str = "+UART_DEF";
        break;
        case ESP12F_SLEEP:
            g_esp12f_str = "+SLEEP";
        break;
        case ESP12F_SET_MAX_RF_POWER:
            g_esp12f_str = "+RFPOWER";
        break;
        case ESP12F_SET_MAX_RF_POWER_VDD33:
            g_esp12f_str = "+RFVDD";
       break;
    }
    return g_esp12f_str;
}


void esp12f_send_command()
{
}
}

