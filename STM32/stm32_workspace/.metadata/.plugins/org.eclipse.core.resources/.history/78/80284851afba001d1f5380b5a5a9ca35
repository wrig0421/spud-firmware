// SRW

#include "stm32l4xx_hal.h"
#include "board_common.h"
#include "board_specific.h"


#if defined(BOARD_SPUD_GLO_V4)

USART_HandleTypeDef gh_host_usart;
SPI_HandleTypeDef   gh_disp_spi;

static void board_init_usart_setup(void)
{
    __HAL_RCC_USART1_CLK_ENABLE();

    GPIO_InitTypeDef  GPIO_InitStruct;
    //USARTx_TX_GPIO_CLK_ENABLE();
    GPIO_InitStruct.Pin       = PIN_XR_RX; // L431 transmit pin
    GPIO_InitStruct.Mode      = GPIO_MODE_AF_PP;
    GPIO_InitStruct.Pull      = GPIO_PULLUP;
    GPIO_InitStruct.Speed     = GPIO_SPEED_FREQ_HIGH;
    GPIO_InitStruct.Alternate = GPIO_AF7_USART1;

    HAL_GPIO_Init(PIN_PORT_B, &GPIO_InitStruct);

    GPIO_InitStruct.Pin       = PIN_XR_TX; // L431 transmit pin
    GPIO_InitStruct.Alternate = GPIO_AF7_USART1;

    HAL_GPIO_Init(PIN_PORT_B, &GPIO_InitStruct);

    gh_host_usart.Instance            = USART1;
    gh_host_usart.Init.BaudRate       = 9600;
    gh_host_usart.Init.WordLength     = USART_WORDLENGTH_8B;
    gh_host_usart.Init.StopBits       = USART_STOPBITS_1;
    gh_host_usart.Init.Parity         = USART_PARITY_NONE;
    gh_host_usart.Init.Mode           = USART_MODE_TX_RX;

    if(HAL_USART_DeInit(&gh_host_usart) != HAL_OK)
    {
        //Error_Handler();
    }
    if(HAL_USART_Init(&gh_host_usart) != HAL_OK)
    {
        //Error_Handler();
    }
}


static void board_init_spi_setup(void)
{
    __HAL_RCC_SPI1_CLK_ENABLE();
    GPIO_InitTypeDef  GPIO_InitStruct;

    GPIO_InitStruct.Pin         = PIN_SPI1_SCK | PIN_SPI1_CIPO | PIN_SPI1_COPI;
    GPIO_InitStruct.Mode        = GPIO_MODE_AF_PP;
    GPIO_InitStruct.Pull        = GPIO_PULLDOWN;
    GPIO_InitStruct.Speed       = GPIO_SPEED_FREQ_VERY_HIGH;
    GPIO_InitStruct.Alternate   = GPIO_AF5_SPI1;
    HAL_GPIO_Init(PIN_PORT_A, &GPIO_InitStruct);

    gh_disp_spi.Instance = SPI1;
    gh_disp_spi.Init.BaudRatePrescaler = SPI_BAUDRATEPRESCALER_256;
    gh_disp_spi.Init.Direction         = SPI_DIRECTION_2LINES;
    gh_disp_spi.Init.CLKPhase          = SPI_PHASE_1EDGE;
    gh_disp_spi.Init.CLKPolarity       = SPI_POLARITY_LOW;
    gh_disp_spi.Init.DataSize          = SPI_DATASIZE_8BIT;
    gh_disp_spi.Init.FirstBit          = SPI_FIRSTBIT_MSB;
    gh_disp_spi.Init.TIMode            = SPI_TIMODE_DISABLE;
    gh_disp_spi.Init.CRCCalculation    = SPI_CRCCALCULATION_DISABLE;
    gh_disp_spi.Init.CRCPolynomial     = 7;
    gh_disp_spi.Init.CRCLength         = SPI_CRC_LENGTH_8BIT;
    gh_disp_spi.Init.NSS               = SPI_NSS_SOFT;
    gh_disp_spi.Init.NSSPMode          = SPI_NSS_PULSE_DISABLE;
    gh_disp_spi.Init.Mode              = SPI_MODE_MASTER;
    if(HAL_SPI_Init(&gh_disp_spi) != HAL_OK)
    {
        /* Initialization Error */
        //Error_Handler();
    }
}


static void board_init_peripheral_setup(void)
{
    board_init_usart_setup();
    board_init_spi_setup();
}

void board_init_specific(void)
{
    GPIO_InitTypeDef GPIO_InitStruct = {0};
    GPIO_InitStruct.Pin = PIN_DISP_BACKLIGHT|PIN_DISP_DC|PIN_DISP_RST;
    GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
    GPIO_InitStruct.Pull = GPIO_NOPULL;
    HAL_GPIO_Init(PIN_PORT_A, &GPIO_InitStruct);

    // spi setup (port A)
    // PIN_SPI1_SCK, PIN_SPI1_CIPO, PIN_SPI1_COPI
    // PIN_SPI1_NSS

    GPIO_InitStruct.Pin = PIN_INT_LVL_EN;
    GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
    GPIO_InitStruct.Pull = GPIO_NOPULL;
    HAL_GPIO_Init(PIN_PORT_B, &GPIO_InitStruct);

    // setup XR_RX and XR_TX

    GPIO_InitStruct.Pin = PIN_XR_GPIO | PIN_VBUS_PRESENT;
    GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
    GPIO_InitStruct.Pull = GPIO_NOPULL;
    HAL_GPIO_Init(PIN_PORT_B, &GPIO_InitStruct);

    GPIO_InitStruct.Pin = PIN_LVL_DIR;
    GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
    GPIO_InitStruct.Pull = GPIO_NOPULL;
    HAL_GPIO_Init(PIN_PORT_C, &GPIO_InitStruct);

    board_init_peripheral_setup();
}


void board_init_specific_power_cycle_level_shifter(void)
{
    HAL_GPIO_WritePin(PIN_PORT_C, PIN_LVL_EN, GPIO_PIN_RESET);
    osDelay(1000);
    HAL_GPIO_WritePin(PIN_PORT_C, PIN_LVL_EN, GPIO_PIN_SET);
}


#endif

